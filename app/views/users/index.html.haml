%div#paginate.large-12.large-centered= paginate @users
%div#page_entries_info.large-12.large-centered= page_entries_info @users

%table
  %thead
    %tr
      %th
      %th Name
      %th Surname
      %th E-mail
      %th CPF
      %th City
      %th State
      %th Street
      %th Street number
      %th Street complement
      %th CEP
  %tbody
    -@users.each do |user|
      %tr
        %td= image_tag(user.avatar_url, size: "100") if user.avatar
        %td= user.name
        %td= user.surname
        %td= user.email
        %td= user.cpf
        %td= user.city
        %td= user.state
        %td= user.street
        %td= user.street_number
        %td= user.street_complement
        %td= user.cep
        %td= link_to t('views.application.show'), user, class: 'button radius'
        %td= link_to t('views.application.edit'), edit_user_path(user), class: 'button radius'
        %td= link_to t('views.application.destroy'), user, class: 'button alert radius', method: :delete, data: { confirm: 'Are you sure?' }
%br

=link_to 'New user', new_user_path, class: 'button success radius'
=link_to t('views.application.back'), root_url, class: 'button radius'