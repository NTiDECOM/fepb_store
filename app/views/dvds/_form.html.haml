= form_for(@dvd, html: {multipart: true}) do |f|
  - if @dvd.errors.any?
    #error_explanation
      %h2
        = pluralize(@dvd.errors.count, "error")
        prohibited this dvd from being saved:
      %ul
        - @dvd.errors.full_messages.each do |message|
          %li= message
  .row
    .columns.large-12.large-centered.text-center
      = image_tag(@dvd.product_image_url, size: "200", style: 'margin-bottom: 10px;') if @dvd.product_image
  .row
    .columns.large-12
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.label :sell_price
        = f.text_field :sell_price, {class: 'price_field'}
      .field
        = f.label :buy_price
        = f.text_field :buy_price, {class: 'price_field'}
      .field
        = f.label :year
        = f.number_field :year
      .field
        = f.label :product_image
        = f.file_field :product_image, class: 'file-input'
        / = f.hidden_field :product_image_cache
  .actions
    = f.submit class: 'button success radius'
