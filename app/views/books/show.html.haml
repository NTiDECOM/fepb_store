.row
  .columns.large-12.text-center
    %h2{style: "text-align: center;"} Book
    = image_tag(@book.product_image_url, size: "200", style: 'margin-bottom: 10px;') if @book.product_image
.row
  .columns.large-6
    %p
      %strong= t('models.book.isbn')
      = @book.isbn
    %p
      %strong= t('models.product.title')
      = @book.title
    %p
      %strong= t('models.book.author')
      = @book.author  
    %p
      %strong= t('models.book.spiritual_author')
      = @book.spiritual_author
  .columns.large-6
    %p
      %strong= t('models.product.sell_price')
      = @book.sell_price
    %p
      %strong= t('models.product.buy_price')
      = @book.buy_price  
    %p
      %strong= t('models.book.publisher')
      = @book.publisher
    %p
      %strong= t('models.book.year')
      = @book.year
    %p
      %strong= t('models.book.pages_number')
      = @book.pages_number

= link_to t('views.application.edit'), edit_book_path(@book.id), class: 'button radius'
= link_to t('views.application.back'), root_path, class: 'button radius'