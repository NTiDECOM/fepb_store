= form_for(@book, html: {multipart: true}) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |message|
          %li
            .alert-box.alert{"data-alert" => ""}
              = message
              %a.close{href: "#"} &times;
  .row
    .columns.large-12.large-centered.text-center
      = image_tag(@book.product_image_url, size: "200", style: 'margin-bottom: 10px;') if @book.product_image
  .row
    .columns.large-3
      .field
        = f.label :isbn
        = f.text_field :isbn
    .columns.large-5
      .field
        = f.label :title
        = f.text_field :title
    .columns.large-4
      .field
        = f.label :author
        = f.text_field :author
  .row
    .columns.large-6
      .field
        = f.label :spiritual_author
        = f.text_field :spiritual_author
    .columns.large-6
      .field
        = f.label :publisher
        = f.text_field :publisher
  .row
    .columns.large-2
      .field
        = f.label :sell_price
        = f.number_field :sell_price
    .columns.large-2
      .field
        = f.label :buy_price
        = f.number_field :buy_price
    .columns.large-2
      .field
        = f.label :year
        = f.number_field :year
    .columns.large-2
      .field
        = f.label :pages_number
        = f.number_field :pages_number
    .columns.large-4
      .field
        = f.label :product_image
        = f.file_field :product_image, class: 'file-input'
        / = f.hidden_field :product_image_cache
  .row
    .columns.large-6
      .field
        = f.label :synopisis
        = f.text_area :synopisis, rows: 60
    - if @book.is_a? Ticket
      .columns.large-3
        .field
          = f.label :event_day
          = f.date_select :event_day
    - if @book.is_a? Ticket
      .columns.large-3
        .field
          = f.label :event_time
          = f.time_select :event_time
  .actions
    = f.submit class: 'button success radius'