= form_for(@dvd, html: {multipart: true}) do |f|
  - if @dvd.errors.any?
    #error_explanation
      %h2
        = pluralize(@dvd.errors.count, "error")
        prohibited this dvd from being saved:
      %ul
        - @dvd.errors.full_messages.each do |message|
          %li= message
  .actions
    = f.submit
