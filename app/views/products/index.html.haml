.row
  .columns.large-12.text-center
    %div#search_products
      = form_for(products_path, method: 'get', id: 'products_search_by_title') do
        = text_field_tag :title, params[:title], placeholder: t('views.product.search'), style: 'display: inline; width: 300px'
      = submit_tag t('generic.search'), class: 'button radius', style: 'display: inline'
.row
  .columns.large-12.text-center
    %div#paginate= paginate @products
    %div#page_entries_info= page_entries_info @products
.row
  -@products.each do |product|
    .columns.large-3.end
      .product-box.text-center
        .product-thumb-container
          = link_to product.product_image ? image_tag(product.product_image_url) : '', url_for(product)
        .product-title
          = product.title
        .product-sell-price
          = number_to_currency product.sell_price
        .product-cart
          = form_for @sale_item, remote: true do |f|
            = f.number_field :product_quantity, disabled: product.quantity == 0, value: 1, min: 1, class: 'cart-number-field'
            = f.hidden_field :product_id, value: product.id
            = f.button type: "submit", disabled: product.quantity == 0, title: (t('views.product.empty') if product.quantity == 0), class: "radius tiny button" do
              %i.fi-shopping-cart
