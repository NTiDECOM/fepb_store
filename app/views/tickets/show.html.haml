.row
  .columns.large-12
    %h2{style: "text-align: center;"}
      %strong= @ticket.title
.row
  .columns.large-4
    = image_tag(@ticket.product_image_url, size: "200", class: 'product-thumb') if @ticket.product_image
  .columns.large-8
    %br
    %p
      %strong= "#{t('models.product.sell_price')}:"
      = number_to_currency @ticket.sell_price
    %p
      %strong= "#{t('models.product.buy_price')}:"
      = number_to_currency @ticket.buy_price
    %p
      %strong= "#{t('models.ticket.event_datetime')}:"
      = @ticket.event_datetime.strftime("%d/%m/%Y - %H:%M:%S")
    %p
      %strong= "#{t('models.product.quantity')}:"
      = @ticket.quantity
.row
  .columns.large-12.text-center
    = link_to t('views.application.edit'), edit_ticket_path(@ticket.id), class: 'button radius' if current_user.present? && current_user.admin
    = link_to t('views.application.back'), 'javascript:history.go(-1);', class: 'button radius'
