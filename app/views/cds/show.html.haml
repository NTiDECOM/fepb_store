.row
  .columns.large-12
    %h2{style: "text-align: center;"}
      %strong= @cd.title
    = image_tag(@cd.product_image_url, size: "200", class: 'product-thumb') if @cd.product_image
    %p
      %strong= "#{t('models.product.sell_price')}:"
      = number_to_currency @cd.sell_price
    %p
      %strong= "#{t('models.product.buy_price')}:"
      = number_to_currency @cd.buy_price
    %p
      %strong= "#{t('models.product.year')}:"
      = @cd.year
    %p
      %strong= "#{t('models.product.quantity')}:"
      = @cd.quantity
.row
  .columns.large-12.text-center
    = link_to t('views.application.edit'), edit_cd_path(@cd.id), class: 'button radius'
    = link_to t('views.application.back'), 'javascript:history.go(-1);', class: 'button radius'
