%p#notice= notice

%h1

%table
  %thead
    %tr
      %th ISBN
      %th Title
      %th Author
      %th Spiritual author
      %th Publisher
      %th Buy price
      %th Sell price
      %th Year
      %th Number of pages

  %div#paginate.small-12.small-centered= paginate @books
  %div#page_entries_info.small-12.small-centered= page_entries_info @books
  
  %tbody
    -@books.each do |book|
      %tr
        %td= book.isbn
        %td= book.title
        %td= book.author
        %td= book.spiritual_author
        %td= book.publisher
        %td= book.sell_price
        %td= book.buy_price
        %td= book.year
        %td= book.pages_number
        %td= link_to 'Show', book, class: 'button radius'
        %td= link_to 'Edit', edit_book_path(book), class: 'button radius' if current_user and current_user.admin
        %td= link_to 'Destroy', book, class: 'button alert radius', method: :delete, data: { confirm: 'Are you sure?' } if current_user and current_user.admin
%br

=link_to 'New Book', new_book_path, class: 'button success radius' if current_user and current_user.admin